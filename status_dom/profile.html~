<!DOCTYPE html>

<html>

<head>
<title>Fecesbook</title>

<script>

function getUpdate(){
  var date = new Date();
  var day = date.getDate();
  var month = date.getMonth() + 1;
  var year=date.getFullYear();
  var hour=date.getHours();
  var minutes=date.getMinutes();
  var date_time=month+"/"+day+"/"+year+ " " +hour+":"+minutes;

  var update=document.getElementById('msg').value ;
  update=date_time+ " - " + update;
  var elem = document.createElement("div");
  var node=document.createTextNode(update);
  elem.appendChild(node);
  my_div=document.getElementById("status");
  my_div.insertBefore(elem, my_div.childNodes[0]);
}
</script>


</head>

<body>
